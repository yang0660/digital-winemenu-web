<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myicellar.digitalmenu.dao.mapper.OperationRecordMapperExt">
  <resultMap id="BaseResultMap" type="com.myicellar.digitalmenu.dao.entity.OperationRecord" extends="com.myicellar.digitalmenu.dao.mapper.OperationRecordMapper.BaseResultMap">
  </resultMap>
  <sql id="Base_Column_List">
    <include refid="com.myicellar.digitalmenu.dao.mapper.OperationRecordMapper.Base_Column_List" />
  </sql>
  <select id="selectCount" parameterType="com.myicellar.digitalmenu.vo.request.OperationRecordReqVO" resultType="java.lang.Long">
    select 
     count(1)
    from t_operation_record
    <where>
      <include refid="where" />
    </where>
  </select>
  <select id="selectList" parameterType="com.myicellar.digitalmenu.vo.request.OperationRecordReqVO" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_operation_record
    <where>
      <include refid="where" />
    </where>
    ORDER BY operation_time DESC
    limit #{offset,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
  </select>

  <sql id="where">
    <if test="userName != null and userName !=''">
      and user_name = #{userName,jdbcType=BIGINT}
    </if>
    <if test="startTime != null">
      and operation_time between #{startTime} and #{endTime}
    </if>
  </sql>
</mapper>
