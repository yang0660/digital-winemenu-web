<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myicellar.digitalmenu.dao.mapper.UserRoleMapperExt">
  <resultMap id="BaseResultMap" type="com.myicellar.digitalmenu.dao.entity.UserRole"
    extends="com.myicellar.digitalmenu.dao.mapper.UserRoleMapper.BaseResultMap">
  </resultMap>

  <sql id="Base_Column_List">
    <include refid="com.myicellar.digitalmenu.dao.mapper.UserRoleMapper.Base_Column_List" />
  </sql>

  <select id="queryCountByRoleId" parameterType="long" resultType="integer">
    select count(0)
    from t_user_role
    where role_id = #{roleId}
  </select>

  <select id="selectCount" parameterType="com.myicellar.digitalmenu.vo.request.UserRoleReqVO" resultType="java.lang.Integer">
    select
    count(1)
    from t_user_role
    <where>
      <include refid="where" />
    </where>
  </select>
  <select id="selectList" parameterType="com.myicellar.digitalmenu.vo.request.UserRoleReqVO" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_user_role
    <where>
      <include refid="where" />
    </where>
    limit #{offset,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
  </select>

  <sql id="where">
    <if test="id != null">
      and id = #{id,jdbcType=BIGINT}
    </if>
    <if test="roleId != null">
      and role_id = #{roleId,jdbcType=BIGINT}
    </if>
  </sql>

  <delete id="deleteByUserId" parameterType="long">
    delete
    from t_user_role
    where user_id = #{roleId}
  </delete>

  <select id="selectRoleNamesByUserId" parameterType="long" resultType="string">
    select b.role_name
    from t_user_role a
    INNER JOIN t_role b ON a.role_id = b.role_id
    where a.user_id = #{userId}
  </select>

  <select id="selectRolesByUserId" parameterType="long"
          resultMap="com.myicellar.digitalmenu.dao.mapper.RoleMapper.BaseResultMap">
    select b.*
    from t_user_role a
    INNER JOIN t_role b ON a.role_id = b.role_id
    where a.user_id = #{userId}
  </select>
    <select id="selectByDepartmentIdAndRoleId" resultMap="BaseResultMap">
      select r.*
      from t_user_role r
      join t_user u on r.user_id = u.user_id
      where
         u.delete_status = 0
        and u.department_id = #{departmentId}
        and r.role_id = #{roleId}
    </select>

    <select id="selectByUserIdDepartmentIdAndRoleId" resultMap="BaseResultMap">
      select r.*
      from t_user_role r
      join t_user u on r.user_id = u.user_id
      where
        u.delete_status = 0
        and r.user_id = #{userId}
        <if test="departmentId != null">
          and u.department_id = #{departmentId}
        </if>
        and r.role_id = #{roleId}
      limit 1
    </select>

</mapper>