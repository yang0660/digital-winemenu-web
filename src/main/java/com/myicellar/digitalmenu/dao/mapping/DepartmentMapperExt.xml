<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myicellar.digitalmenu.dao.mapper.DepartmentMapperExt">
  <resultMap id="BaseResultMap" type="com.myicellar.digitalmenu.dao.entity.Department" extends="com.myicellar.digitalmenu.dao.mapper.DepartmentMapper.BaseResultMap">
  </resultMap>
  <sql id="Base_Column_List">
    <include refid="com.myicellar.digitalmenu.dao.mapper.DepartmentMapper.Base_Column_List" />
  </sql>
  <select id="selectCount" parameterType="com.myicellar.digitalmenu.vo.request.DepartmentReqVO" resultType="java.lang.Integer">
    select 
     count(1)
    from t_department
    <where>
      <include refid="where" />
    </where>
  </select>
  <select id="selectList" parameterType="com.myicellar.digitalmenu.vo.request.DepartmentReqVO" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_department
    <where>
      <include refid="where" />
    </where>
    limit #{offset,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
  </select>

  <sql id="where">
    <if test="departmentId != null">
      and department_id = #{departmentId,jdbcType=BIGINT}
    </if>
    <if test="departmentCode != null">
      and department_code = #{departmentCode,jdbcType=BIGINT}
    </if>
    <if test="departmentName != null">
      and department_name = #{departmentName,jdbcType=BIGINT}
    </if>
  </sql>

  <select id="selectListByParentId" parameterType="long" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_department
    where parent_id = #{parentId,jdbcType=BIGINT}
  </select>

  <select id="selectByDeptCode" parameterType="string" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_department
    where department_code = #{departmentCode,jdbcType=BIGINT}
  </select>

  <select id="selectByDeptName" parameterType="string" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_department
    where department_name = #{departmentName,jdbcType=BIGINT}
  </select>
</mapper>
