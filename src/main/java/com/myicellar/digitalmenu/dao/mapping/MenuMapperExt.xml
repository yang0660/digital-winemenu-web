<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myicellar.digitalmenu.dao.mapper.MenuMapperExt">
    <resultMap id="BaseResultMap" type="com.myicellar.digitalmenu.dao.entity.Menu"
               extends="com.myicellar.digitalmenu.dao.mapper.MenuMapper.BaseResultMap">
    </resultMap>

    <sql id="Base_Column_List">
        <include refid="com.myicellar.digitalmenu.dao.mapper.MenuMapper.Base_Column_List"/>
    </sql>

    <select id="queryMenuList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_menu
    </select>

    <select id="selectListByParentId" parameterType="long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_menu
        where parent_id = #{parentId,jdbcType=BIGINT}
    </select>

</mapper>